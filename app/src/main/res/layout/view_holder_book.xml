<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:background="@color/gridBackgroundColor"
        android:id="@+id/view_holder_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_holder_player_container_padding"
        android:layout_margin="@dimen/view_holder_player_container_margin">

        <ImageView
            tools:src="@android:drawable/ic_dialog_map"
            android:layout_gravity="center_vertical"
            android:id="@+id/view_holder_book_image_view"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="@dimen/view_holder_player_container_padding"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/fontColor"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="Title"
                android:id="@+id/view_holer_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/fontColor"
                android:layout_marginTop="@dimen/view_holder_player_container_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:text="Author"
                android:id="@+id/view_holer_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>